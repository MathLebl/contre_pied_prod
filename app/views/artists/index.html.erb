<div class="transition-fade">
  <div class="banner" style="background-image: url('<%= image_path "bandeau-concerts.jpg" %>'); background-position: top;">
    <div class="container">
      <h1>Nos Artistes</h1>
    </div>
  </div>
  <div class="search">
    <%= form_with url: artists_path, method: :get, local: true do |form| %>
      <%= form.collection_select :id, Artist.all, :id, :name, {:include_blank => 'Recherche par artiste...'}, {:class => 'select2'} %>
      <%= form.submit value:"Recherche" %>
    <% end %>
  </div>
  <%= render 'shared/list' %>
</div>
