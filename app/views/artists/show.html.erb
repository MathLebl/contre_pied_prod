<%= stylesheet_link_tag 'show', media: 'all' %>

<% if  @artist.category == "Concert" %>
  <div class="banner" style="background-image: url('<%= image_path "bandeau-concerts.jpg" %>'); background-position: top">
    <div class="container">
      <h1>Concerts</h1>
    </div>
  </div>
<% elsif  @artist.category == "Spectacle"%>
  <div class="banner" style="background-image: url('<%= image_path "bandeau-spectacles.jpg" %>')">
    <div class="container">
      <h1>Spectacles</h1>
    </div>
  </div>
<% else %>
  <div class="banner" style="background-color: transparent">
    <div class="container">
      <h1>Jeune Public</h1>
    </div>
  </div>
<% end %>
<div class="transition-fade">
  <div class="artist-page">
    <div class="banner" style="background-image: url('<%= image_path(@artist.image) %>');">
      <div class="container">
        <h1><%= @artist.name %></h1>
        <% if   @artist.category == "Spectacle"%>
          <%= link_to spectacle_artists_path do %>
            Retour
          <% end %>
        <% elsif @artist.category == "Concert"%>
          <%= link_to concert_artists_path do %>
            Retour
          <% end %>
        <% else %>
          <%= link_to jeune_public_artists_path do %>
            Retour
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="artist-informations">
      <div class="description">
        <p><%= @artist.description %></p>
      </div>
    </div>
    <div class="centrale">
        <ul class="info-list">
          <li>
            <button id="distri-btn">Distribution</button>
            <p class="is-visible">on est là papa</p>
          </li>
          <li>
            <button id="credit-text">Crédit</button>
            <p class="is-visible">on est là papa</p>
          </li>
          <li>
            <button id="presse-text">Presse</button>
            <p class="is-visible">on est là papa</p>
          </li>
          <li>
            <button id="part-btn">Partenaires</button>
            <p class="is-visible">on est là papa</p>
          </li>
        </ul>




      <div class="dice">
        <img src="<%= @artist.image %>" class="photo top-left" alt="...">
        <img src="<%= @artist.image %>" class="photo top-right" alt="...">
        <iframe width="200" height="133.19" class="video" src="https://www.youtube.com/embed/14PZY7yOIus" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <img src="<%= @artist.image %>" class="photo botom-left" alt="...">
        <img src="<%= @artist.image %>" class="photo botom-right" alt="...">
      </div>
    </div>

    <ul class="social-links">
      <li><a href="#"><i class="fab fa-instagram"></i></a></li>
      <li><a href="#"><i class="fab fa-facebook"></i></a></li>
      <li><a href="#"><i class="fab fa-twitter"></i></a></li>
      <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
      <li><a href="#"><i class="fab fa-spotify"></i></a></li>
      <li><a href="#"><i class="fab fa-youtube"></i></a></li>
      <li><a href="#"><i class="fab fa-soundcloud"></i></a></li>
      <li><a href="#"><i class="fas fa-link"></i></a></li>
    </ul>
    <% if !@events.empty? %>
      <div class="table-title">
        <h2>Agenda</h2>
      </div>
      <table class="table-artist">
        <%= render 'events/event-table-artist' %>
      </table>
    <% end %>
  </div>
</div>
