<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 justify-content-around">
    <% @artists.each do |artist|%>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <img src="<% artist.image %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= artist.name %></h5>
            <p class="card-text"><%= artist.description %></p>
            <h6 class="card-title"><%= artist.style %></h6>
            <a href="#" class="btn btn-primary">Fiche artist</a>
            <div>
              <% artist.events.each do |event| %>
                <%= event.date %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
