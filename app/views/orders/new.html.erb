<div class="w-1/2">
  <%= form_with model: @order, local: true, class: "flex flex-col" do |f| %>
    <%= f.label :address, "Adresse" %>
    <%= f.text_field :address %>
    <%= f.label :city, "Ville" %>
    <%= f.text_field :city %>
    <%= f.label :zip_code, "Code Postal" %>
    <%= f.text_field :zip_code %>
    <%= f.label :phone, "Téléphone" %>
    <%= f.text_field :phone %>
    <%= f.submit "suivant", class: "w-1/3 self-center m-2" %>
  <% end %>
</div>
