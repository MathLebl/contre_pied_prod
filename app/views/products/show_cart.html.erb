<h1 class="text-2xl bg-primary text-white inline-block mt-20 ml-10 py-2 px-4">Mon panier</h1>
<%= link_to products_path, class: "inline-flex items-center absolute text-primary no-underline hover:text-secondary transform hover:scale-110 duration-200 text-3xl p-1 font-bold mt-4 ml-20 top-0 mt-56 lg:mt-40 md:mt-40", id: "back-button" do %>
   <i class="fas fa-arrow-left"></i>
   <span id="back-text" class="text-base ml-2">Retour</span>
<% end %>
<div class="grid mx-4 my-12 lg:mx-40 lg:my-20 md:mx-20">
    <% unless @cart.empty? %>
        <% @cart.each do |item| %>
        <div class="col-span-1 flex items-center pb-1" style="border-bottom: 2px solid; border-color: #BA184D">
            <%= image_tag item["photo_url"], class:"w-3/12 lg:w-1/12 md:w-3/12" %>
            <div class="ml-4 lg:ml-20 md:ml-20 flex w-full justify-between items-center">
                <div>
                    <h3 class="text-xl text-gray-900"><%= item["name"] %></h3>
                    <p class="text-gray-900 text-lg"><%= humanized_money @products.find(item["id"]).price %> <%= currency_symbol %></p>
                </div>
                <div>
                    <%= link_to "Retirer", remove_from_cart_product_path(@products.find(item["id"])), class: "bg-primary text-white font-bold py-2 px-4 my-1 text-center hover:bg-secondary hover:text-primary" %>
                </div>
            </div>
        </div>
        <% end %>
    <% else %>
        <p>Panier vide</p>
    <% end %>
</div>

<div class="mx-4 mb-20 lg:mx-40 md:mx-40 flex flex-col">
    <h2 class="text-2xl text-gray-900">Total de la commande</h2>
    <% if @cart.count <= 1 %>
        <p class="text-lg text-gray-800 mt-4">- <%= @cart.count %> Article -</p>
    <% else %>
        <p class="text-lg text-gray-800 mt-4">- <%= @cart.count %> Articles -</p>
    <% end %>
    <p class="text-lg text-gray-900 mt-4"><%= humanized_money @amount %> <%= currency_symbol %></p>
    <p class="text-lg text-gray-900 mt-4"><%= humanized_money @fees %> <%= currency_symbol %></p>
    <p class="text-lg text-gray-900 mt-4"><%= humanized_money @total_amount %> <%= currency_symbol %></p>

    <% unless @cart.empty? %>
        <%= link_to "Passer la commande", new_order_path, class: 'bg-primary text-white font-bold py-2 px-4 my-1 mt-10 lg:w-1/3 md:w-1/2 self-center text-center hover:bg-secondary hover:text-primary' %>
    <% end %>
</div>
