<div class="bg-secondary w-5/6 mx-auto mb-20 mt-20 relative" style="height: 7rem;">
  <div class="flex flex-col h-full justify-center" style="padding-left: 35%;">
    <%= image_tag "shop", alt: "illustration graphique d'une photo de profil", class: "w-1/8 absolute m-2 lg:ml-48 md:m-0 left-0" %>
    <h1 class="text-xl lg:text-3xl md:text-3xl text-primary font-bold mb-4">Boutique</h1>
    <p class="text-xs lg:text-sm md:text-sm text-primary">Goodies, Cd, t-shirts... Tout est l√† !</p>
  </div>
</div>
<div class="flex m-auto justify-center">
<%= link_to "Tous les articles", products_path(artist: ''), class:' bg-primary text-white m-1 sm:mx-2 sm:py-1 sm:px-3 hover:bg-secondary hover:text-primary flex justify-center items-center' %>
<%= link_to "Les Goguettes", products_path(artist: 'goguettes'), class:' bg-primary text-white m-1 sm:mx-2 sm:py-1 sm:px-3 hover:bg-secondary hover:text-primary flex justify-center items-center' %>
<%= link_to "Valentin Vander", products_path(artist: 'valentin'), class:' bg-primary text-white m-1 sm:mx-2 sm:py-1 sm:px-3 hover:bg-secondary hover:text-primary flex justify-center items-center' %>
<%= link_to "Louise Thiolon", products_path(artist: 'louise'), class:' bg-primary text-white m-1 sm:mx-2 sm:py-1 sm:px-3 hover:bg-secondary hover:text-primary flex justify-center items-center' %>
<%= link_to "Garance", products_path(artist: 'garance'), class:' bg-primary text-white m-1 sm:mx-2 sm:py-1 sm:px-3 hover:bg-secondary hover:text-primary flex justify-center items-center' %>
</div>

<div class="mb-20">
  <div class="grid grid-cols-3 gap-8 lg:gap-20 md:gap-10 mx-4 lg:mx-48 md:mx-12 py-8">
    <% @products.each do |product|%>
    <% if product.published_at? %>
    <% if product.stock > 0 %>
    <%= link_to product_path(product), class:"col-span-2 lg:col-span-1 md:col-span-1 text-black transform hover:text-gray-600 duration-200" do %>
    <div class="list-card ">
      <div class="card-body py-4 relative">
        <div id="back-image-shopping" class="bg-contain bg-no-repeat bg-center m-auto" style="background-image: url('<%= image_path url_for (product.product_image) %>'); "></div>
        <hr class="line-shopping">
        <h5 class="card-name font-bold" style="width: fit-content"><span class="lg:text-base md:text-base"><%= product.shop_category.name %> - </span><span> <%= product.name %></span></h5>
        <h5 class="card-descro text-sm" style="width: fit-content"><span> <%= h truncate(product.description, length: 80, omission: '...') %></span></h5>
        <h6 class="card-style"><span class="text-sm"><%= humanized_money product.price %> <%= currency_symbol %></span></h6>
      </div>
    </div>
    <% end %>
    <% elsif product.stock == 0 %>
    <div class="col-span-2 lg:col-span-1 md:col-span-1 transform hover:scale-105 duration-200 inactive" >
      <div class="list-card ">
        <div class="card-body py-4 relative">
          <h5 class="card-name bg-white text-primary font-bold p-2 mb-4" style="width: fit-content"><span class="lg:text-base md:text-base"><%= product.shop_category.name %> - </span><span> <%= product.name %></span></h5>
          <div id="back-image-shopping" class="bg-cover bg-top" style="background-image: url('<%= image_path url_for (product.product_image) %>'); background-color: #F7C0D2;">
          </div>
          <h6 class="card-style absolute bg-white text-primary font-bold p-2"><span class="text-lg font-bold"><%= humanized_money product.price %> <%= currency_symbol %></span></h6>
          <div id="inactive-flag" class="absolute text-black font-bold text-2xl invisible">
            <h2>En Rupture</h2>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
  </div>
</div>
