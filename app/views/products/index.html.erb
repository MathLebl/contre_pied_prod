<div class="bg-secondary h-40 w-5/6 mx-auto my-20 lg:my-40 md:my-40 relative">
  <div class="flex flex-col h-full justify-center" style="padding-left: 35%;">
      <%= image_tag "shop", alt: "illustration graphique d'une photo de profil", class: "w-3/12 lg:w-1/5 md:w-1/3 absolute m-4 lg:m-24 md:m-0 left-0" %>
      <h1 class="text-xl lg:text-3xl md:text-3xl text-primary font-bold mb-4">Boutique</h1>
      <p class="text-xs lg:text-sm md:text-sm text-primary">Goodies, CD, T-shirts... Craquez pour un produit de votre artiste préféré !</p>
  </div>
</div>

<div class="bg-primary mb-20">
  <div class="grid grid-cols-2 gap-8 lg:gap-20 md:gap-10 mx-8 lg:mx-48 md:mx-12 py-8">
    <% @products.each do |product| %>
    <% if product.published_at? %>
    <% if product.stock > 0 %>
      <%= link_to product_path(product), class:"col-span-2 lg:col-span-1 md:col-span-1 transform hover:scale-105 duration-200" do %>
        <div class="flex bg-white lg:p-4 md:p-3">
          <div class="bg-cover w-1/2 h-32 lg:h-56 md:h-40" style="background-image: url('<%= image_path product.photo_url %>')"></div>
          <div class="bg-white text-primary w-1/2 pl-4 flex flex-col justify-between">
            <span class="font-bold lg:text-lg md:text-base"><%= product.name %></span>
            <span class="md:text-xs"><%= product.description %></span>
            <span class="text-lg font-bold"><%= humanized_money product.price %> <%= currency_symbol %></span>
          </div>
        </div>
    <% end %>
    <% else %>
      <div class="flex bg-white p-4 <%= "inactive" if product.stock == 0 %> col-span-2 lg:col-span-1 md:col-span-1 transform hover:scale-105 duration-200">
          <div id="shop-img" class="bg-cover w-1/2 lg:h-56 md:h-40 relative" style="background-image: url('<%= image_path product.photo_url %>')"></div>
          <p id="rupture-flag" class="bg-white text-gray-700 px-2 py-1 text-xl font-bold absolute hidden" style="top: 45%; left: 18%">Rupture</p>
          <div class="bg-white text-primary w-1/2 pl-4 flex flex-col justify-between">
            <span class="font-bold lg:text-lg md:text-base"><%= product.name %></span>
            <span class="lg:text-base md:text-xs"><%= product.description %></span>
            <span class="text-lg font-bold"><%= humanized_money product.price %> <%= currency_symbol %></span>
          </div>
        </div>
    <% end %>
    <% end %>
    <% end %>
  </div>
</div>