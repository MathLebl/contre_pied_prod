<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@product.photo_url, width: '100%') %>
    </div>
    <!-- <p><%= @session %></p> -->
    <div class="col-sm-12 col-md-6">
      <h1><%= @product.name %></h1>
      <p>Some awesome description of our amazing product.</p>
      <p>Prix: <%= humanized_money_with_symbol(@product.price) %></p>
      <%= form_tag new_order_path, method: "get" do %>
        <%= hidden_field_tag 'product_id', @product.id %>
        <%= submit_tag 'Acheter ce produit', class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Ajouter Ã  mon pannier", add_to_cart_product_path(@product), class: 'btn btn-primary'  %>
    </div>
  </div>
</div>
