<div class="bg-secondary h-40 w-5/6 mx-auto my-20 lg:my-40 md:my-40 relative">
  <div class="flex flex-col h-full justify-center" style="padding-left: 60%;">
      <%= image_tag @product.photo_url, alt: "photo représentant le produit vendu", class: "w-6/12 lg:w-5/12 md:w-6/12 absolute m-4 lg:m-24 md:m-8 left-0" %>
      <h1 class="text-base lg:text-3xl md:text-3xl text-primary bg-white font-bold mb-4 px-2" style="width: fit-content"><%= @product.name %></h1>
  </div>
  <%= link_to products_path, class: "inline-flex items-center absolute text-primary bottom-0 no-underline hover:text-secondary transform hover:scale-110 duration-200 text-3xl p-1 font-bold mt-12", style: "top: 10rem", id: "back-button" do %>
     <i class="fas fa-arrow-left"></i>
     <span id="back-text" class="text-base ml-2">Retour</span>
    <% end %>
</div>

<div class="bg-primary p-4 lg:p-12 md:p-6 mb-20 grid grid-cols-1 grid-rows-3 lg:grid-cols-12 lg:grid-rows-1 md:grid-cols-12 md:grid-rows-1 gap-4">
  <div class="flex flex-col justify-between col-span-1 row-span-1 row-start-3 lg:col-span-3 lg-row-span-1 md:col-span-3 md:row-span-1 lg:col-start-3 lg:row-start-1 md:col-start-2 md:row-start-1">
    <%= link_to "Acheter ce produit", new_order_path(product_id: @product), class: 'bg-white text-primary font-bold md:text-sm py-2 lg:px-4 md:px-2 my-1 text-center hover:bg-secondary hover:text-primary transform hover:scale-105 duration-200'  %>
    <%= link_to "Ajouter à mon pannier", add_to_cart_product_path(@product), class: 'bg-white text-primary font-bold md:text-sm py-2 lg:px-4 md:px-2 my-1 text-center hover:bg-secondary hover:text-primary transform hover:scale-105 duration-200'  %>
  </div>

  <div class="relative bg-white text-primary p-6 lg:p-8 md:p-4 col-span-1 row-span-2 row-start-1 lg:col-span-4 lg:row-span-1 md:col-span-5 md:row-span-1 lg:col-start-8 lg:row-start-1 md:col-start-7 md:row-start-1">
    <span class="absolute right-0 bottom-0 mb-48 lg:mb-24 md:mb-24 mr-8 bg-secondary text-primary px-2 py-1 font-bold text-xl">
      Description
    </span>
    <p><%= @product.description %></p>
  </div>
</div>
