<div class="transition-fade">
  <div class="wraper">
    <div class="cards">
      <%= link_to spectacle_artists_path do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.3)), url('<%= image_path "spectacles2.jpg" %>')">
          Spectacles
        </div>
      <% end %>
      <%= link_to concert_artists_path do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.3)), url('<%= image_path "Concerts.jpg" %>')">
          Concerts
        </div>
      <% end %>
      <%= link_to jeune_public_artists_path do %>
        <div class="card-category" id="jeunePublic" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.3)), url('<%= image_path "JeunePublic.JPG" %>')">
          Jeune Public
        </div>
      <% end %>
    </div>
  </div>

  <div class="table-title">
    <h2>Agenda</h2>
  </div>
  <div class="wraper">
    <table class="table-general">
      <%= render 'events/event-table' %>
    </table>
  </div>
</div>
